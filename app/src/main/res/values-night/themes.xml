<resources>
    <!-- Base application theme. -->
    <style name="Theme.Table" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/charcoal</item>
        <item name="colorPrimaryVariant">@color/charcoal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/charcoal</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Font -->
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="Theme.Table.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="textStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>

</resources>