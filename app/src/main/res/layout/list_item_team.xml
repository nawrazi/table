<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        style="@style/textStyle"
        android:id="@+id/team_rank_text"
        android:layout_width="@dimen/number_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <ImageView
        android:id="@+id/team_logo_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="10dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/team_rank_text"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_shield" />

    <TextView
        style="@style/textStyle"
        android:id="@+id/team_name_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/team_logo_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Manchester United" />

    <TextView
        style="@style/textStyle"
        android:id="@+id/matches_played_text"
        android:layout_width="@dimen/number_width"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/number_margin"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/goal_diff_text"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="29" />

    <TextView
        style="@style/textStyle"
        android:id="@+id/goal_diff_text"
        android:layout_width="@dimen/number_width"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/number_margin"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/points_text"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="-12" />

    <TextView
        style="@style/textStyle"
        android:id="@+id/points_text"
        android:layout_width="@dimen/number_width"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/edge_margins"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="72" />

</androidx.constraintlayout.widget.ConstraintLayout>